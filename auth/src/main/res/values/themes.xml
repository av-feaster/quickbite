    <style name="CustomOutlinedBox_Focused" parent="CustomOutlinedBox">
        <item name="boxStrokeWidth">0dp</item>
    </style>
    <style name="CounterStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/medium_gray</item>
        <!--other parameters that you want to change -->
    </style>

    <style name="Theme.QuickBite" parent="Base.Theme.QuickBite" />
