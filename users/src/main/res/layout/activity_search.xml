<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SearchActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/very_light_grey"
            app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/back_btn_sa"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:src="@drawable/back_orange" />


            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="270dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="40dp"
                android:backgroundTint="@color/transparent100"
                tools:ignore="SpeakableTextPresentCheck"
                android:textColorHint="@color/blue_grey"
                android:textCursorDrawable="@color/blue_grey"
                android:textColor="@color/blue_grey"
                android:cursorVisible="true"
                android:hint="Restaurant name or a dish..."/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="300dp"
                android:src="@drawable/line" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"

                android:layout_gravity="center_vertical|right"
                android:layout_marginEnd="15dp"
                android:src="@drawable/microphone" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>